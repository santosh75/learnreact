table
 thead 
    tr
     th First Name
     th Last Name
     th Email
     th &nbsp 

tbody
    each user in users
     tr     
       td #{user.get('first_name').value}
       td #{user.get('last_name').value}
       td #{user.get('email').value}
       td       
          form(action='/', method='post')
           input(id='_method', type='hidden', name='_method', value='delete')
           input(id='email', type='hidden', name='eamil', value="#{user.get('email').value}")


